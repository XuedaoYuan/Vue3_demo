.xd-toast {
    position: fixed;
    display: none;
    align-items: center;
    justify-content: center;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    min-width: 96px;
    max-width: 70%;
    padding: 8px 16px;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 8px;
    z-index: 1000;
}

.xd-toast__text {
    color: #fff;
    font-size: 14px;
    line-height: 1;
    text-align: center;
}

.xd-toast--fade-in {
    animation: fadeIn 0.3s ease;
}

.xd-toast--fade-out {
    animation: fadeOut 0.3s ease;
}

@keyframes fadeIn {
    0% {
        opacity: 0;
        // transform: scale(0.6);
    }

    100% {
        opacity: 1;
        // transform: scale(1);
    }
}

@keyframes fadeOut {
    0% {
        opacity: 1;
        // transform: scale(1);
    }

    100% {
        opacity: 0;
        // transform: scale(0.6);
    }
}
